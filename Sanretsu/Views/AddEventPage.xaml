<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sanretsu.Views.AddEventPage">
    <ContentPage.Content>
        <StackLayout x:Name="StackContainer" Margin="10,10,10,0">
            <StackLayout Orientation="Horizontal">
                <Label Text="QR/Barcode: " />
                <Label x:Name="Code" FontSize="Medium" Text=" " />
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Type: " />
                <Label x:Name="Type" FontSize="Medium" Text=" " />
            </StackLayout>
            <Button x:Name="BtnScan" Text="Start Scan" Clicked="OnScanClicked" BorderWidth="1" Margin="0,20,0,0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>